<%# 登録対象データを入力するフォームを表示する　アクションはentry %>
<form method="post" action="login">
<table>
  <tr>
    <th>ID</th><th>PASSWORD</th>
  </tr>

<% ['ID', 'PASSWORD'].each do |name| %>
  <tr>
    <td><%= name %></td>
    
    <td><input type="text" name="<%=name%>" size="60" placeholder="未入力" /></td>
  </tr>
  
<% end %>

</table>
<input type="submit" value="LOGIN" />
</form>
<a href="signup.erb">登録してない方はこちら</a></p>
<hr>
</body>
</html>